@model SistemaClinica.Models.ExamsModel

@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar</h1>

<h4>Cadastrar novos Exames</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameExams" class="control-label"></label>
                <input asp-for="NameExams" class="form-control" />
                <span asp-validation-for="NameExams" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <br />
                <input type="submit" value=" Cadastrar " class="btn btn-primary m-1" />
                <a class="btn btn-danger  m-1" asp-action="Index"> Voltar </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
