@model SistemaClinica.Models.PeriodicConsultationModel

@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Consulta Periódicas</h1>

<h4>Cadastrar nova Consulta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPatient" class="control-label"></label>
                <select asp-for="IdPatient" class="form-control" asp-items="ViewBag.IdPatient"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdDoctor" class="control-label"></label>
                <select asp-for="IdDoctor" class="form-control" asp-items="ViewBag.IdDoctor"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdCompany" class="control-label"></label>
                <select asp-for="IdCompany" class="form-control" asp-items="ViewBag.IdCompany"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdExams" class="control-label"></label>
                <select asp-for="IdExams" class="form-control" asp-items="ViewBag.IdExams"></select>
                  <p> <a class="btn btn-outline-primary m-1" asp-action="CreateNewExams">Novo exame</a></p> 
            </div>
            <div class="form-group">
                <label asp-for="DateQuery" class="control-label"></label>
                <input asp-for="DateQuery" class="form-control" />
                <span asp-validation-for="DateQuery" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=" Cadastrar " class="btn btn-primary m-1" />
                <a class="btn btn-danger  m-1" asp-action="Index"> Voltar </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
