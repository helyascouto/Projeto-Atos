@model SistemaClinica.Models.PeriodicConsultationModel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Consulta Periódicas</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exams)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exams.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateQuery)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateQuery)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary m-1" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-danger  m-1" asp-action="Index"> Voltar </a>
</div>
