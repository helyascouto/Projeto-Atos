@model SistemaClinica.Models.ListExamsModel

@{
    ViewData["Title"] = "Exames";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Adicionar novo Exane ao paciente:  @Html.DisplayFor(model => model.Patient.FistName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewExams">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPatient" class="control-label"></label>
                <select asp-for="IdPatient" class="form-control" asp-items="ViewBag.IdPatient"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdExams" class="control-label"></label>
                <select asp-for="IdExams" class="form-control" asp-items="ViewBag.IdExams"></select>
            </div>
            <div class="form-group">
                <input type="submit" value=" Cadastrar " class="btn btn-primary m-1" />
                <a class="btn btn-danger  m-1" asp-action="Index"> Voltar </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}






