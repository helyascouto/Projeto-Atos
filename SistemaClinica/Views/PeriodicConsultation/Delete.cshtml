@model SistemaClinica.Models.PeriodicConsultationModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir Consulta</h1>

<div>
    <h4>Deseja excluir essa Consulta?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.FistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.FistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.NameCompany)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExamsModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExamsModel.NameExams)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateQuery)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateQuery)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger m-1" />
        <a class="btn btn-success  m-1" asp-action="Index"> Voltar </a>
    </form>
</div>
