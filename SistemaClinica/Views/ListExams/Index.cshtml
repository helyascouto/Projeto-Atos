@model IEnumerable<SistemaClinica.Models.ListExamsModel>

@{
    ViewData["Title"] = "Exames do Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Exames do Paciente</h1>

<p>
    <a class="btn btn-primary m-1" asp-action="Create">Criar novo </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exams)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exams.NameExams)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success  m-1" asp-route-id="@item.Id">Alterar</a>
                    <a asp-action="Details" class="btn btn-primary  m-1" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-danger  m-1" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
