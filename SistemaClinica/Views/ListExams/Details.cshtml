@model SistemaClinica.Models.ListExamsModel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Exames</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FistName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exams)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exams.NameExams)
        </dd>
    </dl>
</div>
<div>
       <a class="btn btn-primary m-1" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-danger  m-1" asp-action="Index"> Voltar </a>
</div>
