@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div>

        <h1 class="display-4">Bem Vindos ao SistemaClinica</h1>
        <p ><h4 >Sistema desenvolvido para gerenciamento de consulta para clinicas de medicina do trabalho.</h4></p>

        @*inicio carrocel*@

        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner" >
                <div class="carousel-item active">
                    <img src="~/lib/img/1.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/lib/img/2.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/lib/img/3.png" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>


        @*fim carrocel*@

    </div>
</div>
